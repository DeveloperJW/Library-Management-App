extends layout

block content
  h1=title
  include errors
  form(action=`/books/${books.id}`, method="post")
    p
      label(for='title') Title
      input#title(name='title', type='text', value=books.title)
    p
      label(for='author') Author
      input#author(name='author', type='text', value=books.author)
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value=books.genre)
    p
      label(for='year') Year
      input#year(name='year', type='text', value=books.year)
    p
      input(type='hidden', name='_method', value='PUT')
      input(type='submit', value='Update Book')
  form(method='post', action=`/books/${books.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/') Cancel
    p
      input(type='submit', value='Delete Book')